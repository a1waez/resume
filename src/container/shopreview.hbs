<main class="p-5">
    <hr class="m-2">
    <div class="row">
        <div class="col-12 mb-5">
            <div class="nav nav-tabs">
                {{#with navigation}}
                {{#each links}}
                <div class="nav-item">
                    <a href="#" class="nav nav-link">{{text}}</a>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-8 mb-5">
            {{#with formBlock}}
            <div class="row m-2">
                <h1 class="mb-3">{{header}}</h1>
                {{#with rating}}
                <p>{{title}} : {{value}}</p>
                {{/with}}
                <div class="mb-5">
                    <div class="row">
                        {{#with actionBlock}}
                        <div class="nav nav-tabs">
                            {{#each tabs}}
                            {{#if isActive}}
                            <a href="#" class="nav nav-link active">{{text}}</a>
                            {{else}}
                            <a href="#" class="nav nav-link">{{text}}</a>
                            {{/if}}
                            {{/each}}
                        </div>
                        <hr class="m-2">

                        <div>
                            {{#with report}}
                            <div class="card m-2">
                                <div class="row p-4">
                                    <h5>{{title}}</h5>
                                    {{#with button}}
                                    <button class="btn btn-secondary col-4 mt-2">{{text}}</button>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    <hr class="m-2">


                    <div class="row">
                        {{#with feedbackBlock}}
                        <h2>{{title}}</h2>
                        {{#each buttons}}
                        <div class="col-4 mt-5">
                            {{#if isWarning}}
                            <button class="btn btn-warning">{{text}}</button>
                            {{else}}

                            {{/if}}
                            {{#if isSuccess}}
                            <button class="btn btn-success">{{text}}</button>
                            {{else}}

                            {{/if}}
                            {{#if isDanger}}
                            <button class="btn btn-danger">{{text}}</button>
                            {{else}}

                            {{/if}}
                        </div>
                        {{/each}}
                        {{/with}}
                    </div>

                </div>

            </div>
        </div>


        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card p-2 m-2">
                <img class="col-4 p-1" src="https://picsum.photos/110/100">
                <p class="h5">{{name}}</p>

            </div>
            <div class="card p-2 m-2">
                <p class="h5">{{price}}</p>
                {{#if inMarket}}
                Є в наявності
                {{else}}

                {{/if}}
                {{#each buttons}}
                <div class="col-6 m-1">
                    {{#if isPrimary}}
                    <button class="btn btn-primary">{{text}}</button>
                    {{else}}

                    {{/if}}
                    {{#if isSecondary}}
                    <button class="btn btn-secondary">{{text}}</button>
                    {{else}}

                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="card p-2 m-2">
                {{#with seller}}
                <p>{{title}} : <strong>{{value}}</strong></p>
                {{/with}}
            </div>
            {{/with}}
        </div>

    </div>
    {{/with}}

    <hr class="m-2">

    {{#each reviewList}}
    <div class="card mt-3 p-4">
        <div class="card">
            {{#with title}}
            <div class="card-header">
                <p class="h5">
                    <strong>{{userName}}</strong>
                </p>
                <p>{{caption}}</p>
                <p>{{date}}</p>
                {{/with}}
            </div>
            {{#with reviewBody}}
            <div class="card-body">
                {{#with seller}}
                <p class="mb-4"><strong>{{title}}</strong> : {{value}}</p>
                {{/with}}
                {{#with rating}}
                <p class="mb-4"><strong>{{title}}</strong> : {{value}}</p>
                {{/with}}
                {{#each text}}
                <p class="mb-4">{{this}}</p>
                {{/each}}
                {{#with advantages}}
                <p class="mb-1"><strong>{{title}}</strong> :
                <p>{{text}}</p>
                </p>
                {{/with}}
                {{#with disadvantages}}
                <p class="mb-1"><strong>{{title}}</strong> :
                <p>{{text}}</p>
                </p>
                {{/with}}
                {{#each images}}
                <img class="col-3 p-1" src="https://picsum.photos/110/100">
                {{/each}}
            </div>
        </div>

        {{#each coments}}
        <div class="card m-4 p-2">
            <h4>{{userName}}</h4>
            <p>{{date}}</p>
            <p>{{text}}</p>
        </div>
        {{/each}}

        {{/with}}
    </div>
    {{/each}}

    <hr class="m-2">
    <div class="row m-2">
        {{#with service}}
        <div class="col-12 p-3">
            <div class="card text-bg-success">
                <div class="card-body">
                    <h2 class="card-title text-center">{{title}}</h2>
                    <p class="text-center">{{description}}</p>
                    {{#each buttons}}
                    <div class="mb-3 text-center">
                        <button class="btn btn-primary">{{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <hr class="m-2">
    <div class="nav">
        {{#each footer}}
        <div class="nav-item">
            {{#each this}}
            <a href="#" class="nav nav-link">{{text}}</a>
            {{/each}}
        </div>
        {{/each}}
    </div>
</main>