
{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main class="p-5">
    <div class="row">
        <div class="col-12 mb-5">
            <div class="nav nav-tabs">
                {{#with navigation}}
                {{#each links}}
                <div class="nav-item">
                    <a href="#" class="nav nav-link">{{text}}</a>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-12">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                {{#if url}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{else}}
                <li class="breadcrumb-item">
                    {{name}}
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>

        <div class="mt-4">
            <h1>{{header}}</h1>
        </div>


        <div class="row mt-3">
            {{#each sortBlock}}
            <div class="col-3">
                <select class="form-select form-select-sm/lg">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>

        <div class="row">
            <div class="row gx-3 mt-5">
                {{#with filterBlock}}
                <div class="col-3">
                    <div class="card p-3">
                        {{#with sellers}}
                        <div class="col-12">
                            <div class="form-label pb-2">{{title}}</div>
                            {{#each list}}
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{value}}</label>
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}

                        <hr class="m-3">

                        {{#with brands}}
                        <div class="col-12">
                            <div class="form-label pb-2">{{title}}</div>
                            {{#with input}}
                            <div class="mt-3 mb-3">
                                <input class="form-control" placeholder="{{placeholder}}">
                            </div>
                            {{/with}}
                            {{#each options}}
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{value}}</label>
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}

                        <hr class="m-3">

                        {{#with price}}
                        <div class="col-12">
                            <div class="form-label pb-2">{{title}}</div>
                            {{#with range}}
                            <div class="p-3">
                                <input class="form-control" placeholder="{{from}}">
                                <input class="form-control mt-3" placeholder="{{to}}">
                            </div>
                            {{/with}}
                            {{#with button}}
                            <button class="btn btn-outline-secondary">{{text}}</button>
                            {{/with}}
                        </div>
                        {{/with}}

                        <hr class="m-3">

                        {{#each filterList}}
                        <div class="col-12">
                            <div class="form-label pb-2">{{title}}</div>
                            {{#each options}}
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{value}}</label>
                            </div>
                            {{/each}}
                        </div>
                        <hr class="m-3">
                        {{/each}}
                    </div>
                </div>
                {{/with}}


                <div class="col-8 row">
                    {{#each goodsList}}
                    <div class="col-6">
                        {{>catalogItem}}
                    </div>
                    {{/each}}
                </div>

                {{#each goodsList}}
                <div class="col-4">
                    {{>catalogItem}}
                </div>
                {{/each}}

            </div>
        </div>
    </div>

    <hr class="m-2">
    <div class="row m-2">
        {{#with service}}
        <div class="col-12 p-3">
            <div class="card text-bg-success">
                <div class="card-body">
                    <h2 class="card-title text-center">{{title}}</h2>
                    <p class="text-center">{{description}}</p>
                    {{#each buttons}}
                    <div class="mb-3 text-center">
                        <button class="btn btn-primary">{{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <hr class="m-2">
    <div class="nav">
        {{#each footer}}
        <div class="nav-item">
            {{#each this}}
            <a href="#" class="nav nav-link">{{text}}</a>
            {{/each}}
        </div>
        {{/each}}
    </div>

</main>



