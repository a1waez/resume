{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
    {{#with main}}
    <main>
        <section class="mb-3">
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div class="">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <br>




                        {{#if company.url}}
                        {{> link text=company.name href=company.url blank=true noLine=true}}
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}


                        <br>
                        <br>

                        <div>
                            <strong>Project ({{projectAmount}})</strong>
                        </div>

                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                <br>
                                <div>{{about}}</div>
                            </li>

                            <br>
                            <br>

                            <div>
                                <em><strong>Project stacks ({{stackAmount}})</strong></em>
                            </div>

                            <br>

                            <ul>
                                {{#each stacks}}
                                <li>
                                    <div>{{name}}</div>
                                </li>
                                {{/each}}
                            </ul>

                            <br>
                            <br>

                            <div>
                                <em><strong>Project awards</strong></em>
                            </div>

                            <br>

                            <ul>
                                {{#each awards}}
                                <li>
                                    <div>{{name}}</div>
                                </li>
                                {{/each}}
                            </ul>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>


